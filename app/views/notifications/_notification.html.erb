<div class="table">
  <%= link_to user_path(notification.visitor) do %>
    <%= attachment_image_tag notification.visitor, :profile_image, size: "30x30" %>
  <% end %>
  <%= notification_form(notification) %><%= "(#{time_ago_in_words(notification.created_at)}前)" %>
  <br>
  <% if @comment.present? %>
    <p class="text-center text-muted"><%= @comment %></p>
  <% end %>
</div>