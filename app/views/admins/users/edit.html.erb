<div class="container">
  <div class="col-sm-11 col-md-8 col-lg-5 mx-auto mt-5">
    <%= form_with model: @user, url: admins_user_path(@user), method: :patch, local: true do |f| %>
      <div class="form-group">
        <%= f.label :名前 %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :会員ステータス %>
        <p>
          <%= f.radio_button :is_deleted, false %><%= f.label :is_deleted, "有効" %>
          <%= f.radio_button :is_deleted, true %><%= f.label :is_deleted, "退会" %>
        </p>
      </div>
      <%= f.submit "変更を保存", class: "btn btn-secondary" %>
    <% end %>
  </div>
</div>