<div class="container">
  <div class="mt-3"><%= link_to "【管理者ログアウト】", destroy_admin_session_path, method: :delete %></div>
  <table class="table table-hover table-invers mt-3">
    <thead>
      <tr>
        <th></th>
        <th>会員ID</th>
        <th>名前</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
        <th>編集</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, size: "40x40" %></td>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
            <% if user.is_deleted == true %>
              退会
            <% else %>
              有効
            <% end %>
          </td>
          <td><%= link_to "編集", edit_admins_user_path(user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @users %>
</div>