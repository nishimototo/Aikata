  <div class="text-center">
    <h5 class="chat-name mt-5"><%= @user.name %>さんとのチャット</h5>
  </div>
  <div class="message">
    <% @chats.each do |chat|%>
      <% if chat.user == current_user %>
        <div class="my_message">
          <p class="my_message_form"><%= chat.message %></p>
        </div>
      <%else%>
        <div class="balloon">
          <div>
            <div class="faceicon">
              <%= attachment_image_tag @user, :profile_image %>
            </div>
          </div>
          <div class="chatting">
            <div class="partner_message">
              <p><%= chat.message %></p>
            </div>
          </div>
      </div>
      <% end %>
    <% end %>
</div>
<div class="text-center">
  <%= form_with model: @chat do |f| %>
    <div class="form-group">
      <%= f.text_area :message, rows: "3", cols:"30" %>
    </div>
      <%= f.hidden_field :room_id %>
      <%= f.submit "送信", class: "btn_answer" %>
  <% end %>
</div>

