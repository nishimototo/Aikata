<div class="container">
  <div class="col-sm-11 col-md-8 col-lg-5 mx-auto mt-3">
    <h4>お題の投稿</h4>
    <%= form_with model: @theme, local: true do |f| %>
      <div class="form-group">
        <%= f.label :画像はこちら %>
        <%= f.attachment_field :image, class: "form-control-file" %>
      </div>

      <div class="form-group">
        <%= f.label :お題 %>
        <%= f.text_area :content, rows:"5", class: "form-control" %>
      </div>
      <%= f.submit "投稿", class: "btn btn-secondary offset-5 mt-3" %>
    <% end %>
  </div>
</div>
