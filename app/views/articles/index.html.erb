<div class="container">
  <div class="text-center">
    <h3>全ての投稿</h3>
    <h5>エリアとジャンルで探す</h5>
    <h5><%= link_to "自分で募集する", new_article_path %></h5>
    <% @articles.each do |article| %>
      <div class="col-md-8">
        <div class="row">
          <%= article.title %>
          <%= article.user.name %>
          <%= article.created_at.strftime('%Y/%m/%d') %>
        </div>
        <%= truncate(article.content, length: 50) %> <!--文字短くしたいけど合ってるか。レイアウトは後で修正 -->
      </div>
      <div class="col-md-3">
        <div class="row">
          募集エリア：<%= article.area %>
          カテゴリー：<%= article.category %>
        </div>
        <div class="row">
          <!--閲覧数といいね入れる -->
        </div>
      </div>
    <% end %>
    <%= paginate @articles %>
  </div>
</div>
