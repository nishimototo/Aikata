<div class="container">
  <div class="col-sm-11 col-md-8 col-lg-5 mx-auto mt-3">
    <h4 class="text-center theme_new">募集の投稿</h4>
    <%= render "answers/error", model: @article %>
    <%= form_with model: @article, local: true do |f| %>
      <div class="form-group">
        <%= f.text_field :title, class:"form-control", placeholder: "タイトルを入力してください" %>
      </div>
      <div class="form-group">
        <%= f.select :area, [["関東エリア"], ["近畿エリア"], ["中部エリア"], ["九州エリア"], ["東北エリア"], ["中国エリア"], ["北海道エリア"], ["四国エリア"]], prompt: "エリアを選択してください", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.select :category, [["相方募集"], ["友人募集"], ["告知"]], prompt: "カテゴリーを選択してください", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_area :content, rows:"7", class:"form-control", placeholder: "募集内容を入力してください" %>
      </div>
      <div class="text-center">
        <%= f.submit "投稿する", class: "btn_answer" %>
      </div>
    <% end %>
  </div>
</div>
