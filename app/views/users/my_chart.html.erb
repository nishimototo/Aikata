<div class="container">
  <div class="text-center mt-5">
    <span class="total_chart">
      <% if @score.present? %>
        <%= @user.name %>さんの合計スコア <i class="fas fa-star"></i><%= @score.first.sum_rate.round %>
      <% end %>
    </span>
  </div>
  <div class="mt-5">
    <span>【直近のスコア】</span>
  </div>
  <div class="mt-5">
    <%= column_chart @counts %>
  </div>

</div>